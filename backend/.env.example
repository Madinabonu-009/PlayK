# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration (optional - currently using JSON files)
# MONGODB_URI=your_mongodb_connection_string_here

# Telegram Bot Configuration
# 1. @BotFather dan bot yarating
# 2. Bot token ni oling
# 3. Bot bilan chat boshlang va /start yuboring
# 4. https://api.telegram.org/bot<TOKEN>/getUpdates ga kiring
# 5. chat_id ni oling
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# JWT Configuration
# Generate strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_EXPIRES_IN=24h

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=Play Kids <noreply@playkids.uz>

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# PAYMENT CONFIGURATION
# ============================================

# Site URL (production uchun o'zgartiring)
SITE_URL=http://localhost:5173
API_URL=http://localhost:3000

# Oylik to'lov summasi (so'mda)
MONTHLY_FEE=1500000

# Payme Configuration
# 1. https://payme.uz/business ga kiring
# 2. Merchant yarating
# 3. Merchant ID va Secret Key oling
# 4. Webhook URL: https://your-domain.com/api/payments/payme
PAYME_MERCHANT_ID=your_payme_merchant_id
PAYME_SECRET_KEY=your_payme_secret_key
PAYME_TEST_MODE=true

# Click Configuration
# 1. https://click.uz/dev ga kiring
# 2. Merchant yarating
# 3. Merchant ID, Service ID va Secret Key oling
# 4. Prepare URL: https://your-domain.com/api/payments/click/prepare
# 5. Complete URL: https://your-domain.com/api/payments/click/complete
CLICK_MERCHANT_ID=your_click_merchant_id
CLICK_SERVICE_ID=your_click_service_id
CLICK_SECRET_KEY=your_click_secret_key
CLICK_TEST_MODE=true

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Session secret for cookies
SESSION_SECRET=your_session_secret_here
# CSRF protection
CSRF_ENABLED=true
